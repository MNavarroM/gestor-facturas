{% extends "base.html.twig" %}

{% block body %}

	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">


	<style>
		* {
			font-family: 'Roboto', sans-serif;
		}

		h1,
		h5,
		h3 {
			padding: 0;
			margin: 0;
		}

		main{
			margin-top: 60px;
		}

		.num-invoice {
			text-align: right;
			padding: 1px 15px 15px;
			margin-bottom: 30px;
		}

		.info{
			border: 1px solid black;
			background-color: #f5f5f5;
			width:350px;
			min-height: 220px;
		}

		.info p {
			margin: 0;
			padding: 0 0 0 7px;		
			font-size: 18px;	
		}

		.name {
			padding: 5px;
			margin-bottom: 10px;
			background-color: #424242;	
			color: white;
			border-bottom: 1px solid black;
		}

		.data-invoice {
			display: flex;
			flex-direction: row;
			justify-content: space-around;
			margin-bottom: 80px;
		}

		table {
			width: 90%;
			margin: 0 auto;
		}

		thead {
			background-color: #424242;
			color: white;
		}

		th {
			border: 1px solid black;
		}

		td {
			border: 1px solid black;
			
		}

		.total{
			display:inline;
			padding-right:80px;
			width: 90%;
		}

		tr, .cell-total{
			border: none;
		}

		.cell-total{
			font-size: 20px;	
		}

	</style>
	<main class="" style="width:21cm;height: 29.7cm;">

		<div>
			<div class="header-invoice">
				<div class="num-invoice">
					<span style="font-size: 20px; padding: 15px;">Factura #1069<span><br/>
							<span>12-12-1212</span>
						</div>
						<div class="data-invoice">
							<div>
								<div id="info">
									<div class="logo"></div>
									<div class="info">
										<h5 class="name">Transportes Antonio Navarro</h5>
										<p>NIF: 37.211.395-F
										</p>
										<p> 598-854-447
										</p>
										<p>C/ Calle
										</p>
										<p>Almodóvar del río, Córdoba
										</p>
										<p>14720
										</p>
									</br>
								</p>
							</div>
						</div>
					</div>
					<div id="invoice-client">
						<div class="logo"></div>
						<div class="info">
							<h5 class="name">{{ cliente.nombre }}</h5>
							<p>NIF: {{ cliente.cif }}
							</p>
							<p> 598-854-447
							</p>
							<p>{{ cliente.direccion }}
							</p>
							<p>Almodóvar del río, Córdoba
							</p>
							<p>14720
							</p>
						</br>
					</p>
				</div>
			</div>
		</div>
	</div>
	<div
		class="invoice-table">
		<!--End Invoice Mid-->
		<div id="invoice-bot">
			<div id="table">
				<table class="striped">
					<thead>
						<tr>
							<th class="item">
								Descripción
							</th>
							<th class="Hours">
								Cantidad
							</th>
							<th class="Rate">
								Precio
							</th>
							<th class="subtotal">
								Sub-total
							</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Porte de tractor de la finca El Injertal a Talleres la Estación</td>
							<td>3</td>
							<td>36</td>
							<td>109</td>
						</tr>
						<tr>
							<td>Porte de tractor de la finca El Injertal a Talleres la Estación</td>
							<td>3</td>
							<td>36</td>
							<td>109</td>
						</tr>
						<tr>
							<td>Porte de tractor de la finca El Injertal a Talleres la Estación</td>
							<td>3</td>
							<td>36</td>
							<td>109</td>
						</tr>
					</tbody>
				</table>
				<div style="text-align: right;margin-top:40px;">
					<table class="total">
					<tr>
						<td class="cell-total">
							<span>Total Neto</span>
							<span>1000 €</span>
						</td>
					</tr>
					<tr>
						<td class="cell-total">
							<span>IVA 21%</span>
							<span>200 €</span>
						</td>
					</tr>
					<tr>
						<td class="cell-total" style="border-top: 1px solid black;">
							<span>Total</span>
							<span>1200 €</span>
						</td>
					</tr>										
				</table>				
				</div>
			</div>
		</div>
		<!--End InvoiceBot-->
	</div>
</main>{% endblock body %}
